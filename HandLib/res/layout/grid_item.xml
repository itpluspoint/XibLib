<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_btn" >

        <TextView
            android:id="@+id/tvNameOfTheBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/grid_item_img"
            android:gravity="center"
            android:text="Sansar"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvNameOfTheBook"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvNameOfTheBook"
            android:gravity="center"
            android:text="December"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/grid_item_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:src="@drawable/kabita"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/bDownload"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/grid_item_img"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/custom_btn_download"
            android:focusable="false"
            android:padding="3dp"
            android:text="Download" />

        <Button
            android:id="@+id/bRead"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/grid_item_img"
            android:layout_alignParentRight="true"
            android:background="@drawable/custom_btn_read"
            android:focusable="false"
            android:padding="3dp"
            android:text="Read"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp" />

    </RelativeLayout>

</FrameLayout>